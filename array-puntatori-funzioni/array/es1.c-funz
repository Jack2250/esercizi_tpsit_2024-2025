/*Leggere in input da tastiera due numeri maggiori di 0 e farne la somma. 
*/

//Autore: Redi Giacomo

#include <stdio.h>

int somma (n1,n2){
    if(n1> 0 && n2> 0){
        return n1+n2;
    }else{
        return -1;
    }
}

int main(int argc, char *argv [])
{
    int n1,n2;
    
    printf("Inserisci numero");
    scanf("%d",&n1);
    printf("Inserisci numero");
    scanf("%d",&n2);
    
    printf("La somma Ã¨: %d",somma(n1,n2));
    return 0;
}
